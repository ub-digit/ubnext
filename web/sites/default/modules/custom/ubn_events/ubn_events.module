function ubn_events_format_event_time($timestamp) {
  $time = format_date($timestamp, 'custom', 'H:i');
  $date = format_date($timestamp, 'custom', 'l j F');
  if ($time == '00:00') {
    return $date;
  }
  else {
    return t(
      '!date, at !time',
      array(
        '!date' => $date,
        '!time' => $time
      )
    );
  }
}
