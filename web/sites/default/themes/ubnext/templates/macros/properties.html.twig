{% macro properties(title, ubn_property_fields, namespace) %}
{% if ubn_property_fields.count %}
  <div class="row panel-separator">
    <div class="col-sm-8 col-sm-offset-2">
      <div><h2>{{ title }}</h2></div>
    <ul class="list-unstyled ub-list-of-links">
    {% for property in ubn_property_fields %}
      {% if not property.value is null %}
        <li>
          <div class="row vertical-align">
            <div class="col-xs-6 col-md-8">{{ property.field_resource_name.value }}</div>
            <div class="col-xs-6 col-md-4 center"><strong>{{ property.field_resource_value.value | raw}}</strong></div>
          </div>
        </li>
      {% endif %}
    {% endfor %}
    </ul>
    </div>
  </div>
{% endif %}
{% endmacro %}

{% macro property_value(value, type, language) %}
  {% if type == 'boolean' %}
    {{ value ? t('Yes') : t('No') }}
  {% elseif type == 'integer' and language == 'sv' %}
    {{ value ~ ' st' }}
  {% else %}
    {{ value }}
  {% endif%}
{% endmacro %}
