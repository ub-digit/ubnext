{% macro date_default(timestamp) %}
  {{ format_date(timestamp, 'custom', 'j F Y', date_default_timezone(FALSE)) }}
{% endmacro %}

{% macro date_default_with_time(timestamp) %}
  {{ format_date(timestamp, 'custom', 'j F Y H:i', date_default_timezone(FALSE)) }}
{% endmacro %}

{% macro date_day_and_month(timestamp) %}
  {{ format_date(timestamp, 'custom', 'j F', date_default_timezone(FALSE)) }}
{% endmacro %}

{% macro date_custom(timestamp, format) %}
  {{ format_date(timestamp, 'custom', format, date_default_timezone(FALSE)) }}
{% endmacro %}
