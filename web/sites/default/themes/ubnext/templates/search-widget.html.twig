{# slate
    name = Search-widget
    models[url] = item
    models[slogan] = item
    models[placeholder] = item
    models[aria_label] = item
    models[link_list] = item
#}

<div id="search-widget" class="panel-separator">
  <div class="container">
    	<h2 class="small header-list no-top-margin">{{ t('Search tools') }}</h2>
    <div class="col-xs-12 bg-plate">
      <h2 class="h1 search-widget-slogan">{{ slogan | raw }}</h2>
      <div class="row">
          <div class="col-xs-12">
            <div class="row">
              <div class="col-md-8">
                <form class="custom-form">
                  <input type="text" name="query" class="form-control input-lg" aria-label="{{ aria_label }}" placeholder="{{ placeholder }}">
                  <div class="input-icon">
                    <i class="fa fa-search" aria-hidden="true"></i>
                  </div>
                  <div class="input-btn">
                    <button class="btn btn-primary" type="submit" aria-label="{{ aria_label }}">{{ t('Search') }}</button>
                  </div>
                </form>
              </div>
              <div class="col-md-4">
                {{ link_list|raw }}
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>