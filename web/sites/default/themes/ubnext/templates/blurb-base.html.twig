<div class="blurb panel-separator col-sm-6">
  <a href="{% block url %}{% endblock %}" class="blurb-wrapper-link">
    <div class="blurb-wrapper">
      <div class="blurb-image">
        {% block image %}{% endblock %}
      </div>
      <div class="story-promoted-text-wrapper">
        <div class="story-promoted-container">
          <div class="story-promoted-text">
            <h2 class="blurb-header list primary">
              {% block header %}
                {{ entity.title.value }}
              {% endblock %}
            </h2>
          </div>
          <i class="story-arrow fa fa-arrow-right"></i>
        </div>
      </div>
    </div>
  </a>
</div>
