{% import "macros/misc.html.twig" as misc %}
{% import "macros/panel-links.html.twig" as pane %}
  <div class="col-xs-12 news-widget-header-container">
    <h2 class="small header-list no-top-margin news-widget-header">{{t('News')}}</h2>
  </div>

{{ pane.pane_begin("news-widget") }}
  {# Body does nothing right now, just an extra wrapper, skip? #}
  {{ pane.pane_body_begin() }}
  <div class="col-sm-6">
  {{ image_stories|raw }} 
  </div>
  <div class="col-xs-12 col-sm-6">
    <div class="latest-stories-widget-stories-wrapper bg-grey">
      <ul class="list-unstyled latest-stories-widget-stories">
        {{ stories|raw }}
      </ul>
      <div class="more-news-link clearfix">
        <span>{{ misc.link(t('More news'), 'news', 'latest-stories-widget-read-more-link', {  absolute : false}) }}<i class="fa fa-arrow-right"></i>
        </span>
      </div>
    </div>
  </div>
  {{ pane.pane_body_end() }}
{{ pane.pane_end() }}
